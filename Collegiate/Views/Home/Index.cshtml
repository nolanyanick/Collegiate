<!-- #region Section: Title -->

<div class="d-flex justify-content-center align-items-center">
    <img src="~/content/green-img4.jpg" alt="Leaves" class="w-100">
    <div class="position-absolute bg-white box-shadow w-50 p-5 text-center">

        <h1 class="display-1">Ride Green.</h1>
        <h1 class="display-1 mb-5">Ride Collegiate.</h1>
