@{
    ViewData["Title"] = "Home";
}

<!-- #region Section: Title -->

<div style="display:flex; justify-content:center; align-items:center;">
    <img src="~/content/green-img4.jpg" class="w-100">
    <div style="position:absolute; background-color:white;" class="box-shadow w-50 p-5 text-center">

        <h1 class="display-1">Ride Green.</h1>
        <h1 class="display-1 mb-5">Ride Collegiate.</h1>
        <p class="text-uppercase font-weight-bold">
            Discover the #1 environmentally concious way to get to class!
        </p>
        <button class="btn-lg btn-success w-50">Get Started</button>

    </div>
</div>

<!-- #endregion -->

<!-- #region Section: Campus Locations-->

<div class=" jumbotron rounded-0 p-5" style="background-color:darkseagreen;">

    <div class="d-flex justify-content-center text-white">
        <h1 class="text-uppercase text-center m-5">Accomodation for all campus locations</h1>

        <figure class="m-5">
            <img src="~/content/Main-Campus-index.jpg" alt="Leaves" class="w-100">
            <figcaption class="text-center text-uppercase">Main Campus</figcaption>
        </figure>

        <figure class="m-5">
            <img src="~/content/Parsons-Stulen-indexjpg.jpg" alt="Leaves" class="w-100">
            <figcaption class="text-center text-uppercase">Aero Park Campus</figcaption>
        </figure>

        <figure class="m-5">
            <img src="~/content/GL-Campus-2-indexjpg.jpg" alt="Leaves" class="w-100">
            <figcaption class="text-center text-uppercase">Great Lakes Campus</figcaption>
        </figure>
    </div>
</div>

<!-- #endregion -->

