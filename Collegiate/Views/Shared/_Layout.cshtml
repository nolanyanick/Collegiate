<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewData["Title"] - Collegiate</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/LOGO_MARGIN.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .logo {
            max-width: 5vw;
            max-height: 5vh;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light bg-white border-bottom box-shadow">
            <div class="container m-0 p-0">
                <a class="navbar-brand w-25 m-0 p-0" href="#">
                    <img src="~/content/LOGO_MARGIN_CROPPED.png" alt="Collegiate Logo" class="w-25 m-0 p-0">
                    <div class="text-uppercase m-0 ml-2 p-0" asp-area="" asp-controller="Home" asp-action="Index" style="color:darkgreen;">Collegiate</div>

                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse m-0 p-0">
                    @*<partial name="_LoginPartial" />*@
                    <ul class="navbar-nav flex-grow-1 mr-5">
                        <li class="nav-item mr-3">
                            <a id="navOption1" class="p-2 nav-link rounded-pill" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mr-3">
                            <a id="navOption2" class="p-2 nav-link rounded-pill" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item mr-3">
                            <a id="navOption3" class="p-2 nav-link rounded-pill" asp-area="" asp-controller="Home" asp-action="FindRide">Requests & Offers</a>
                        </li>
                        <li class="nav-item mr-3">
                            <a id="navOption3" class="p-2 nav-link rounded-pill" href="/Identity/Account/Register">Register</a>
                        </li>
                        <li class="nav-item mr-0">
                            <a id="navOption3" class="p-2 nav-link rounded-pill" href="/Identity/Account/Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container d-flex justify-content-center">

            &copy; 2021
            <a class="text-dark mr-2 ml-2" asp-area="" asp-controller="Home" asp-action="Home"> Collegiate</a>
            -
            <a class="text-dark mr-2 ml-2" asp-area="" asp-controller="Home" asp-action="FindRide">Find Ride</a>
            -
            <a class="text-dark mr-2 ml-2" asp-area="" asp-controller="Home" asp-action="About">Contact Us</a>
            -
            <a class="text-dark mr-2 ml-2" asp-area="" asp-controller="Home" asp-action="About">About</a>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/CalendarRequest.js" asp-append-version="true"></script>
    <script src="~/js/CalendarOffer.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>