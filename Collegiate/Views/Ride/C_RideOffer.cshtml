@model Collegiate.Models.DriverOffer

@{
    ViewData["Title"] = "Create Offer";
}

<h1>Create a Ride Offer</h1>
<form asp-area="" asp-controller="RideRequest" asp-action="Create" method="post">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group" style="display: table-cell;">
        @*Departure Time*@
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" name="Address"/>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group" style="display: table-cell;">
        @*Departure Time*@
        <label asp-for="DepartureTime"></label>
        <input asp-for="DepartureTime" class="form-control" name="DepartureTime"/>
        <span asp-validation-for="DepartureTime" class="text-danger"></span>
        @*Arrival Time*@
        <label asp-for="ArrivalTime"></label>
        <input asp-for="ArrivalTime" class="form-control" name="ArrivalTime"/>
        <span asp-validation-for="ArrivalTime" class="text-danger"></span>
    </div>
    <br/>
    <div class="form-group" style="display: table-cell;">
        @*Departure Time*@
        <label asp-for="Campus"></label>
        <input asp-for="Campus" class="form-control" name="Campus"/>
        <span asp-validation-for="Campus" class="text-danger"></span>
    </div>
    <br/>
    <div class="form-group" style="display: table-cell;">
        @*Departure Time*@
        <label asp-for="DriverComments"></label>
        <input asp-for="DriverComments" class="form-control" name="DriverComments"/>
        <span asp-validation-for="DriverComments" class="text-danger"></span>
    </div>
</form>
<p>By posting a ride offer, you are agreeing to the <a asp-area="" asp-controller="Home" asp-action="TermsAndConditions">Terms and Conditions</a></p>
<br />
<button type="submit" class="btn btn-primary">Post Offer</button>
