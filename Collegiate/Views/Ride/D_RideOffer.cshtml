@model Collegiate.Models.DriverOffer

@{
    ViewData["Title"] = "Delete Offer";
}

<h1>Delete a Ride Offer</h1>
<form asp-area="" asp-controller="RideRequest" asp-action="Delete" method="post">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivalTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Campus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Campus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DriverComments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DriverComments)
        </dd>
    </dl>
</form>
<p>Are you sure you want to delete this ride offer?</p>
<br />
<button type="submit" class="btn btn-danger">Delete Offer</button>
